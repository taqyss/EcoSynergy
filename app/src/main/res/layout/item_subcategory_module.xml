<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_subcategory">

    <!-- Section 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/content_list_shape"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/subcategory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is Solar Energy?"
            android:textColor="@color/primaryColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primaryColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_video"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:transformPivotY="12dp"
                android:transformPivotX="12dp"
                android:rotation="270"
                android:contentDescription="Video Icon"
                android:src="@drawable/ic_video"
                app:tint="@color/lightGreen" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Introduction to solar power and its importance."
                android:textColor="@color/primaryColor"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_discussion"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Discussion Icon"
                android:src="@drawable/ic_discussion"
                app:tint="@color/lightGreen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Discussion"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/primaryColor"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>