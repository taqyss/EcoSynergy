<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF"/>  <!-- White background -->

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="#46644B"/>  <!-- Matches your app theme -->

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>  <!-- Smooth rounded edges -->

    <!-- Optional padding inside the search box -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
