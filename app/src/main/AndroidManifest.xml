<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:theme="@style/Theme.EcoSynergy"
        tools:targetApi="31"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher">
        <!-- Main Activity -->
        <activity
            android:name=".LearningActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".SubCategoryModuleActivity"/>
        <activity android:name=".SubCategoryResourceActivity"/>
        <activity android:name=".ModulesContentActivity"/>
        <activity android:name=".ResourceContentActivity"/>
        <activity android:name=".DiscussionActivity"/>
        <activity android:name=".QuizActivity"/>

        <!-- Meta-data for Firebase Notifications -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/primaryColor" />
    </application>


    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>
